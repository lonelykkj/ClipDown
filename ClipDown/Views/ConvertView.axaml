<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ClipDown.Views.ConvertView">
    
    <UserControl.Background>
        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">  
            <GradientStop Color="#000000" Offset="0.0"/>  
            <GradientStop Color="#212121" Offset="0.25"/>  
            <GradientStop Color="#121111" Offset="0.5"/>  
            <GradientStop Color="#2B2727" Offset="1.0"/>  
        </LinearGradientBrush> 
    </UserControl.Background>
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="15">
            <TextBlock FontSize="80" FontWeight="Bold">  
                <TextBlock.Foreground>  
                    <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">  
                        <GradientStop Color="Purple" Offset="0.0"/>  
                        <GradientStop Color="Blue" Offset="1.0"/>  
                    </LinearGradientBrush>            </TextBlock.Foreground>  
                ClipDown  
            </TextBlock> 
        </StackPanel>
    </Grid>
    
</UserControl>
